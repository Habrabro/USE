<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="15dp">

        <TextView android:id="@+id/tvRequestId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/requestListItemDescTextViewStyle"
            android:text="Запрос № 2354"/>

        <TextView android:id="@+id/tvRequestTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/requestListItemDescTextViewStyle"
            android:text="Русский язык – Задание 21"/>

        <LinearLayout android:id="@+id/llSent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView android:id="@+id/tvSentTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/requestListItemTitleTextViewStyle"
                android:text="Отправлен: "/>

            <TextView android:id="@+id/tvSentDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/requestListItemDescTextViewStyle"
                android:text="2019-11-21 16:43"/>
        </LinearLayout>

        <LinearLayout android:id="@+id/llStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView android:id="@+id/tvStatusTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/requestListItemTitleTextViewStyle"
                android:text="Статус: "/>

            <TextView android:id="@+id/tvStatusDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/requestListItemDescTextViewStyle"
                android:textColor="@color/colorPrimaryDark"
                android:text="НА ПРОВЕРКЕ"/>
        </LinearLayout>

        <LinearLayout android:id="@+id/llAttachments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="15dp"
            android:paddingBottom="15dp">

            <TextView android:id="@+id/tvAttachmentsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/requestListItemTitleTextViewStyle"
                android:text="Вложения: "/>

            <LinearLayout android:id="@+id/llAttachmentsList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="5dp"
                android:paddingBottom="15dp">
            </LinearLayout>
        </LinearLayout>

        <LinearLayout android:id="@+id/llText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="15dp"
            android:paddingBottom="15dp">

            <TextView android:id="@+id/tvTextTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/requestListItemTitleTextViewStyle"
                android:text="Текст: "/>

            <TextView android:id="@+id/tvTextDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                style="@style/requestListItemDescTextViewStyle"
                android:lineSpacingExtra="6sp"
                android:drawableEnd="@drawable/ic_arrow_point_to_right"/>
        </LinearLayout>

        <LinearLayout android:id="@+id/llMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="15dp"
            android:paddingBottom="15dp">

            <TextView android:id="@+id/tvMessageTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/requestListItemTitleTextViewStyle"
                android:text="Результаты проверки: "/>

            <TextView android:id="@+id/tvMessageDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/requestListItemDescTextViewStyle"
                android:lineSpacingExtra="6sp"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
