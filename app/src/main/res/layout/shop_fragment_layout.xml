<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical" android:layout_width="match_parent"
android:layout_height="match_parent">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="15dp">

    <LinearLayout android:id="@+id/llMainContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="150px"
            android:gravity="center_horizontal"
            android:textSize="24sp"
            android:textColor="@android:color/black"
            android:text="Магазин"/>

        <LinearLayout
            android:orientation="horizontal" android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="100">

            <TextView android:id="@+id/tvCountOfChecksCol"
                android:layout_weight="25"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                style="@style/variantResultsTableCell"
                android:background="#C4C4C4"
                android:text="Проверок"/>

            <TextView android:id="@+id/tvPriceCol"
                android:layout_weight="17"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                style="@style/variantResultsTableCell"
                android:background="#C4C4C4"
                android:text="Цена, ₽"/>

            <TextView android:id="@+id/tvDisablesAdsCol"
                android:layout_weight="29"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                style="@style/variantResultsTableCell"
                android:background="#C4C4C4"
                android:textSize="12sp"
                android:text="Без рекламы"/>
        </LinearLayout>
    </LinearLayout>

    <Button android:id="@+id/btnCloseShop"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="30dp"
        style="@style/exerciseAnswerSectionButton"
        android:background="@drawable/subject_menu_button"
        android:hint="Закрыть"/>
</LinearLayout>
</ScrollView>