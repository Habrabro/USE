<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical" android:layout_width="match_parent"
android:layout_height="match_parent">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="15dp">

    <LinearLayout android:id="@+id/llMainContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView android:id="@+id/tvShopTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textColor="#212121"
            android:paddingBottom="10dp"
            style="@style/shopItemTitleStyle"
            android:text="Магазин"/>
    </LinearLayout>

    <Button android:id="@+id/btnCloseShop"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginTop="30dp"
        android:visibility="invisible"
        style="@style/exerciseAnswerSectionButton"
        android:background="@drawable/subject_menu_button"
        android:hint="Закрыть"/>
</LinearLayout>
</ScrollView>