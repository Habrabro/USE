<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="100">

    <TextView android:id="@+id/tvNumberCol"
        android:layout_weight="14"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        style="@style/variantResultsTableCell"
        android:text="Номер"/>

    <TextView android:id="@+id/tvRightAnswerCol"
        android:layout_weight="36"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        style="@style/variantResultsTableCell"
        android:text="Верный ответ"/>

    <TextView android:id="@+id/tvAnswerCol"
        android:layout_weight="36"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        style="@style/variantResultsTableCell"
        android:text="Ваш ответ"/>

    <TextView android:id="@+id/tvPointsCol"
        android:layout_weight="14"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        style="@style/variantResultsTableCell"
        android:text="Баллы"/>

</LinearLayout>