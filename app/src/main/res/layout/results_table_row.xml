<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:weightSum="100">

    <TextView android:id="@+id/tvNumberCol"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:minWidth="95dp"
        style="@style/variantResultsTableCell"
        android:paddingStart="10dp"
        android:paddingEnd="55dp"
        android:text="1"/>

    <TextView android:id="@+id/tvRightAnswerCol"
        android:layout_weight="50"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="-54dp"
        android:paddingStart="10dp"
        android:paddingEnd="55dp"
        style="@style/variantResultsTableCell"
        android:text="чтобы несмотря"/>

    <TextView android:id="@+id/tvAnswerCol"
        android:layout_weight="50"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginStart="-54dp"
        android:paddingStart="10dp"
        android:paddingEnd="55dp"
        style="@style/variantResultsTableCell"
        android:textColor="@android:color/white"
        android:text="Серебряный"/>

    <TextView android:id="@+id/tvPointsCol"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:minWidth="95dp"
        android:layout_marginStart="-54dp"
        style="@style/variantResultsTableCell"
        android:textColor="@android:color/white"
        android:text="2"/>

</LinearLayout>